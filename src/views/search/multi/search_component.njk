{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "csrf-token-input/macro.njk" import csrfTokenInput %}
<form method="POST">
    {{ csrfTokenInput() }}
    {{
        govukFieldset({
            legend: {
                text: "Search for an order",
                classes: "govuk-fieldset__legend--l",
                isPageHeading: true
            }
        })
    }}
    {{
        govukInput({
            label: {
                text: "Order number",
                classes: "govuk-label",
                isPageHeading: true
            },
            classes: "govuk-input--width-20",
            id: "orderNumber",
            name: "orderNumber",
            value: control.data.id
        })
    }}
    {{
        govukInput({
            label: {
                text: "Email",
                classes: "govuk-label",
                isPageHeading: true
            },
            classes: "govuk-!-width-one-half",
            id: "email",
            name: "email",
            value: control.data.email
        })
    }}
    {{
        govukInput({
            label: {
                text: "Includes company number",
                classes: "govuk-label",
                isPageHeading: true
            },
            classes: "govuk-input--width-10",
            id: "companyNumber",
            name: "companyNumber",
            value: control.data.companyNumber
        })
    }}
    {{
        govukButton({
            text: "Search"
        })
    }}
</form>
