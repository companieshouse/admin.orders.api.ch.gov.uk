<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 id="order-reference" class="govuk-heading-xl">{{ control.data.orderId }}</h1>
        <h2 class="govuk-heading-m">Item details</h2>
        <dl class="govuk-summary-list" id="itemDetailsList">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Item number
                </dt>
                <dd class="govuk-summary-list__value">
                    {{ control.data.itemId }}
                </dd>
            </div>
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Company name
                </dt>
                <dd class="govuk-summary-list__value">
                    {{ control.data.companyName }}
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Company number
                </dt>
                <dd class="govuk-summary-list__value">
                    {{ control.data.companyNumber }}
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Delivery method
                </dt>
                <dd class="govuk-summary-list__value">
                    {{ control.data.deliveryMethod }}
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Delivery address
                </dt>
                <dd class="govuk-summary-list__value">
                    {{ control.data.deliveryAddress | striptags(true) | escape | nl2br  }}
                </dd>
            </div>

            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Email address
                </dt>
                <dd class="govuk-summary-list__value">
                    {{ control.data.emailAddress }}
                </dd>
            </div>
        </dl>
    </div>
</div>
