{% extends "base.njk" %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set title = "Search for an order" %}
{% block content %}
<form method="POST">
{{
    govukFieldset({
        legend: {
            text: "Search for an order",
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
        }
    })
}}

{{
    govukInput({
        label: {
            text: "Order number",
            classes: "govuk-label",
            isPageHeading: true
        },
        classes: "govuk-input--width-20",
        id: "orderNumber",
        name: "orderNumber"
    })
}}

{{
    govukInput({
        label: {
            text: "Email",
            classes: "govuk-label",
            isPageHeading: true
        },
        classes: "govuk-!-width-one-half",
        id: "email",
        name: "email"
    })
}}

{{
    govukInput({
        label: {
            text: "Company number",
            classes: "govuk-label",
            isPageHeading: true
        },
        classes: "govuk-input--width-10",
        id: "companyNumber",
        name: "companyNumber"
    })
}}

{{
    govukButton({
        text: "Search"
    })
}}
</form>
{% endblock %}
